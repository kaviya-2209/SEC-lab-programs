<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Registration</title>
<style>
  body{font-family:sans-serif} .error{color:red;font-size:12px}
</style>
</head>
<body>
<h2>Registration Form</h2>

<form id="regForm">
  <input placeholder="Name" id="name"><div id="nameErr" class="error"></div>
  <input placeholder="Email" id="email"><div id="emailErr" class="error"></div>
  <input type="password" placeholder="Password" id="pass"><div id="passErr" class="error"></div>
  <input placeholder="Phone" id="phone"><div id="phoneErr" class="error"></div>
  <button>Submit</button>
</form>

<script>
const f = id => document.getElementById(id), err = (id, m) => f(id).textContent = m;
f("regForm").onsubmit = e => {
  e.preventDefault();
  let ok = true, name = f("name").value.trim(), email = f("email").value.trim(),
      pass = f("pass").value.trim(), phone = f("phone").value.trim();

  ok &= /^[A-Za-z ]+$/.test(name)    ? err("nameErr","") : (err("nameErr","Invalid name"),0);
  ok &= /^[^@]+@[^@]+\.[a-z]{2,}$/.test(email) ? err("emailErr","") : (err("emailErr","Invalid email"),0);
  ok &= /^(?=.*[A-Z])(?=.*\d).{8,}$/.test(pass) ? err("passErr","") : (err("passErr","Min 8 chars, 1 uppercase & number"),0);
  ok &= /^\d{10}$/.test(phone)       ? err("phoneErr","") : (err("phoneErr","10 digits only"),0);

  if(ok) alert("Form submitted successfully!");
};
</script>
</body>
</html>